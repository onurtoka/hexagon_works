    %% ==================== Incoming Adapter Thread ====================
    subgraph T1["Thread 1 Incoming Adapter"]
        A[ZeroMQ DISH Socket<br/>data: raw UDP multicast bytes]
        B[Incoming Adapter<br/>class ExtrapTrackDataZeroMQIncomingAdapter]
        C[deserializeBinary<br/>input bytes -> ExtrapTrackData]
        P1[Incoming Port Interface<br/>class IExtrapTrackDataIncomingPort]
        A --> B --> C --> P1
    end
    class A,B,C,P1 incoming;

    %% ==================== Domain Processing Thread ====================
    subgraph T2["Thread 2 Domain Processing"]
        Q1[(Event Queue ExtrapTrackData<br/>data: ExtrapTrackData)]
        U[Use Case<br/>class ProcessTrackUseCase<br/>action: queue + process]
        S[Domain Service<br/>class CalculatorService<br/>action: delay calc]
        M[Domain Model<br/>class DelayCalcTrackData<br/>data: enriched with delay fields]
        P1 --> Q1 --> U --> S --> M
    end
    class Q1,U,S,M domain;

    %% ==================== Domain Outgoing Port ====================
    subgraph T2b["Domain Outgoing Port"]
        P2[Outgoing Port Interface<br/>class IDelayCalcTrackDataOutgoingPort]
        M --> P2
    end
    class P2 domain;

    %% ==================== Outgoing ZeroMQ Thread ====================
    subgraph T3["Thread 3 Outgoing ZeroMQ"]
        OZ[Outgoing Adapter<br/>class DelayCalcTrackDataZeroMQOutgoingAdapter]
        Q2[(Event Queue DelayCalcTrackData<br/>data: DelayCalcTrackData)]
        SER[serialize 96 bytes<br/>DelayCalcTrackData -> binary]
        ZS[ZeroMQ RADIO Send<br/>data: binary UDP multicast]
        P2 --> OZ --> Q2 --> SER --> ZS
    end
    class OZ,Q2,SER,ZS outgoing;

    %% ==================== Outgoing Custom Thread ====================
    subgraph T4["Thread 4 Outgoing Custom"]
        OC[Outgoing Adapter<br/>class DelayCalcTrackDataCustomOutgoingAdapter]
        Q3[(Event Queue DelayCalcTrackData<br/>data: DelayCalcTrackData)]
        EX[Extract FirstHopDelayTime<br/>data: int64 delay]
        BUF[Batch Buffer 200 samples<br/>data: delay array]
        AVG[Arithmetic Mean<br/>output: mean delay]
        P2 --> OC --> Q3 --> EX --> BUF --> AVG
    end
    class OC,Q3,EX,BUF,AVG custom;

    %% ==================== Main Thread ====================
    subgraph T5["Thread 5 Main Lifecycle"]
        MAIN[Entry Point main.cpp<br/>start/stop order]
        MAIN --> B
        MAIN --> U
        MAIN --> OZ
        MAIN --> OC
    end
    class MAIN main;


